/**
 *_pow_recursion - x raised to the power of y
 *@x: number to raise
 *@y: power
 *Return: power
 */
int _pow_recursion(int x, int y)
{
	if (y == 0)
		return (1);
	if (y > 0)
	{
		x *= _pow_recursion(x, y - 1);
			return (x);
	}

	return(-1);
}



































